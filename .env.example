# Environment Configuration
NODE_ENV=production
TZ=Asia/Almaty

# Bot Configuration
BOT_MODE=SIM
BOT_NAME=CryptoTradingBot

# Binance API Configuration
BINANCE_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false
BINANCE_SANDBOX=false

# Telegram Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_WHITELIST_IDS=your_telegram_user_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1500

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trading_bot
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=trading_user
RABBITMQ_PASSWORD=rabbitmq_password_here
RABBITMQ_VHOST=/

# Service Ports
ORCHESTRATOR_PORT=3000
MARKET_DATA_PORT=3001
STRATEGY_ENGINE_PORT=3002
RISK_ENGINE_PORT=3003
EXECUTION_SERVICE_PORT=3004
AI_ADVISOR_PORT=3005
NOTIFIER_SERVICE_PORT=3006
STORAGE_SERVICE_PORT=3007
WATCHDOG_SERVICE_PORT=3008

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Trading Configuration
MAX_DAILY_LOSS_PERCENT=5
DEFAULT_LEVERAGE=5
MAX_LEVERAGE=10
MAX_POSITION_PERCENT=30
RISK_FREE_RATE=0.05

# AI Configuration
AI_VOLATILITY_THRESHOLD=40
AI_CONFIDENCE_THRESHOLD=80
AI_USAGE_COST_LIMIT=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/trading-bot.log

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=10000